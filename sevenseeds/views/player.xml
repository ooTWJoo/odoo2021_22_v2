<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="sevenseeds.player_tree">
            <field name="name">7Seeds player Tree</field>
            <field name="model">sevenseeds.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="avatar_icon" widget="image" />
                    <field name="characters" widget="many2many_tags" />
                    <field name="quantity_characters" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sevenseeds.player_form">
            <field name="name">7Seeds player form</field>
            <field name="model">sevenseeds.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="avatar" widget="image" />
                            <field name="name" />
                            <field name="quantity_characters" />
                            <field name="characters">
                                <tree>
                                    <field name="name" />


                                    <field name="mood" />
                                    <field name="illness" />
                                    <field name="area" />
                                    <field name="base" widget="many2many_tags" />
                                </tree>
                            </field>

                        </group>
                        <button name="create_character" type="object" string="Create Character" class="oe_highlight" />
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>