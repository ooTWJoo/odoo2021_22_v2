<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="sevenseeds.player_tree">
            <field name="name">7Seeds player Tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="avatar_icon" widget="image" />
                    <field name="characters" widget="many2many_tags" />
                    <field name="quantity_characters" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sevenseeds.player_kanban">
            <field name="name">7Seeds player kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="name"/>
                    <field name="login"/>
                    <field name="team"/>
                    <templates>
                        <t t-name="kanban-box">

                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.team.raw_value)}} oe_kanban_card o_kanban_record_has_image_fill ">
                                <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block sevenseeds_img_kanban"
                                     t-attf-style="background-image:url('#{kanban_image('res.partner', 'avatar', record.id.value, placeholder)}')">
                                </div>


                                    <div class="oe_kanban_details d-flex flex-column">
                                        <a type="open"><h4 class="o_kanban_record_title oe_partner_heading"><field name="name"/></h4></a>
                                        <ul>
                                            <li>Id: <field name="id"/></li>
                                            <li>Login: <field name="login"/></li>
                                            <li>Team: <field name="team"/></li>
                                        </ul>
                                    </div>

                            </div>


                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

      <record model="ir.ui.view" id="wizard_medicine_form">
          <field name="name">7Seeds medicine wizard form</field>
          <field name="model">sevenseeds.wizard_medicine</field>
          <field name="arch" type="xml">
              <form>
                  <field name="medicine_points"/>
                  <field name="sickPeeps" mode="tree">
                      <tree decoration-danger="illness>40">
                          <field name="name"/>
                          <field name="player"/>
                          <field name="illness"/>
                          <button name="btn_heal" type="object" string="Heal" class="oe_highlight"/>
                      </tree>
                  </field>
              </form>
          </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_medicine_action">
          <field name="name">Heal Characters</field>
          <field name="res_model">sevenseeds.wizard_medicine</field>
          <field name="view_mode">form</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_id" ref="wizard_medicine_form"/>
          <field name="target">new</field>
    </record>

        <record model="ir.ui.view" id="sevenseeds.player_form">
            <field name="name">7Seeds player form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                        <header>
                            <button name="%(wizard_medicine_action)d" type="action" string="Heal" class="oe_highlight"/>
                            <button name="create_character" type="object" string="Create A Character" class="oe_highlight"/>
                        </header>
                    <sheet>
                        <separator string="User Info"></separator>
                        <group>
                            <group>

                                <field name="avatar" widget="image" />
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="login"/>
                                <field name="password" password="True"/>
                                <field name="team"/>
                            </group>
                        </group>
                        <notebook>
                                <page name="characters" string="Characters">
                                <group>
                                    <field name="quantity_characters" />
                                </group>
                            <field name="characters" mode="kanban">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name" />
                                    <field name="mood" />
                                    <field name="illness" />
                                    <field name="area" />
                                    <field name="base" widget="many2many_tags" />
                                     <templates>
                                            <t t-name="kanban-box">

                                                <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                                                    <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block sevenseeds_img_kanban"
                                                         t-attf-style="background-image:url('#{kanban_image('sevenseeds.character', 'avatar', record.id.value, placeholder)}')">
                                                    </div>


                                                    <div class="oe_kanban_details d-flex flex-column">
                                                        <a type="open"><h4
                                                                class="o_kanban_record_title oe_partner_heading"><field
                                                                name="name"/></h4></a>
                                                        <ul>
                                                            <li>Mood: <field name="mood"/></li>
                                                            <li>Illness: <field name="illness"/></li>
                                                            <li>Area: <field name="area"/></li>
                                                            <li>Bases: <field name="base"/></li>
                                                        </ul>
                                                    </div>


                                                </div>


                                            </t>
                                        </templates>
                                </kanban>
                            </field>
                        </page>


                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="sevenseeds.player_search">
      <field name="name">7Seeds Player search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
          <search>
              <field name="name" />
              <filter name="player_partner" string="Is Player" domain="[('is_player','=',True)]"></filter>
        </search>
      </field>
    </record>




    </data>
</odoo>