<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="sevenseeds.bases_tree">
      <field name="name">7Seeds bases tree</field>
      <field name="model">sevenseeds.base</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />


          <field name="mood" />
          <field name="illnes" />
          <field name="area" />
          <field name="base" widget="many2many_tags" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sevenseeds.bases_form">
      <field name="name">7Seeds bases form</field>
      <field name="model">sevenseeds.base</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1><field name="name" /></h1>
            <field name="avatar" widget="image"/>
            <group>


            </group>
            <notebook>
              <page name="base" string="Bases">
                <field name="base" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


  </data>
</odoo>