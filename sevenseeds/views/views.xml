    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sevenseeds.player_action_window">
      <field name="name">7 Seeds Players</field>
      <field name="res_model">sevenseeds.player</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.character_action_window">
      <field name="name">Characters</field>
      <field name="res_model">sevenseeds.character</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.team_action_window">
      <field name="name">Teams</field>
      <field name="res_model">sevenseeds.team</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.area_action_window">
      <field name="name">Areas</field>
      <field name="res_model">sevenseeds.area</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.skill_action_window">
      <field name="name">Skills</field>
      <field name="res_model">sevenseeds.skill</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.job_action_window">
      <field name="name">Jobs</field>
      <field name="res_model">sevenseeds.job</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.weapon_action_window">
      <field name="name">Weapons</field>
      <field name="res_model">sevenseeds.weapon</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.pet_action_window">
      <field name="name">Pets</field>
      <field name="res_model">sevenseeds.pet</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sevenseeds.base_action_window">
      <field name="name">Base</field>
      <field name="res_model">sevenseeds.base</field>
      <field name="view_mode">tree,form</field>
    </record>


