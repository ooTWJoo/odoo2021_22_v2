<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="sevenseeds.character_tree">
      <field name="name">7Seeds character tree</field>
      <field name="model">sevenseeds.character</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />


          <field name="mood" />
          <field name="illness" />
          <field name="area" />
          <field name="base" widget="many2many_tags" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sevenseeds.character_form">
      <field name="name">7Seeds character form</field>
      <field name="model">sevenseeds.character</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="avatar" widget="image"/>
            <group>
              <field name="sex"/>
              <field name="name"/>
              <field name="mood" />
              <field name="illness" />
              <field name="area" />
              <field name="player" />
              <field name="template" />
            </group>
            <notebook>
              <page name="base" string="Bases">
                <field name="base" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

        <record model="ir.ui.view" id="sevenseeds.character_kanban">
            <field name="name">7Seeds character kanban</field>
            <field name="model">sevenseeds.character</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="sex"/>
                    <field name="name"/>
                    <field name="mood" />
                    <field name="illness" />
                    <field name="area" />
                    <field name="player" />
                    <templates>
                        <t t-name="kanban-box">

                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                                <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block sevenseeds_img_kanban"
                                     t-attf-style="background-image:url('#{kanban_image('sevenseeds.character', 'avatar', record.id.value, placeholder)}')">
                                </div>


                                    <div class="oe_kanban_details d-flex flex-column">
                                        <a type="open"><h4 class="o_kanban_record_title oe_partner_heading"><field name="name"/></h4></a>
                                        <ul>
                                            <li>Mood: <field name="mood"/></li>
                                            <li>Illness: <field name="illness"/></li>
                                            <li>Area: <field name="area"/></li>
                                            <li>Player: <field name="player"/></li>

                                        </ul>
                                    </div>

                            </div>


                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

  </data>
</odoo>